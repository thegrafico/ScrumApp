<!--  Header and Styles -->
<%- include('modals/header'); %>

<%- include('modals/topNavbar'); %>

<div class="wrapper d-flex align-items-stretch">

    <%- include('modals/dashboard-side-navbar'); %>
    
    <!-- Page Content  -->
    <div id="content">

        <div class="info-container p-4">

            <div class="container-fluid">

                <div class="row create-project-container">

                    <!-- Create project button -->
                    <div class="col-10 create-project-button-container pb-3">
                        <div class="button-container">
                            <button 
                                type="button" 
                                id="create-project-btn"
                                class="btn btn-primary"
                                data-toggle="modal" 
                                data-target="#create-project-modal">
                                    <i class="far fa-plus-square"></i>  Create Project
                                </button>
                        </div>
                    </div>

                </div>

                <!-- Tabs and filter -->
                <div class="row">
                    <div class="col-10" style="padding-left: 0;">
                        <nav class="navbar navbar-expand-lg">

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="nav mr-auto dashboard-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-bs-toggle="tab" href="#tabs-projects"> <span> Projects</span></a>
                                    </li>
                                    <!-- <li class="nav-item">
                                        <a class="nav-link" data-bs-toggle="tab" href="#tabs-work-items"> <span> My Work Items </span></a>
                                    </li> -->
                                    
                                    
                                </ul>
                                <div class="form-inline my-2 my-lg-0 filter-projects-container">
                                    <i class="fas fa-filter filter-icon"></i>
                                    <input class="add-shadow-box" type="text" placeholder="filter projects"
                                        id="filter-projects">
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>

                <!-- Tabs UI -->
                <div class="row">

                    <div class="col-12">

                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade active show" id="tabs-projects">
                                <div class="container-fluid">

                                    <!-- FAVORITE PROJETS -->
                                    <div class="row pl-3" id="favorite-projects-container">
                                        <% for(let i = 0; i < numberOfFavoriteProjects; i++){ %>
                                            <div id="<%= projects[i]._id %>" class="col-3 card text-white project-container bg-dark mb-6 card-project add-shadow-box">
                                                <div class="card-body">

                                                    <div class="initals-container card-initials pr-2 go-to-project" data-projectid="<%= projects[i]._id %>">
                                                        <div class="project-initials-container bg-initials-color" style="background-color: <%= projects[i]['initialsColors']%>;">
                                                            <span><%= projects[i]["initials"]%></span>
                                                        </div>
                                                    </div>
                                                    
                                                    <h4 class="card-title go-to-project project-name" data-projectid="<%= projects[i]._id %>">
                                                        <%= projects[i].title %>
                                                    </h4>
                                                    <p class="card-text project-description description-color"><%= projects[i].description %></p>
                                                </div>
                                                <% if (projects[i]["author"].toString() == currentUser["_id"].toString()) { %>

                                                    <div class="pr-4 project-icons" style="text-align: right;">
                                                        <span class="edit-project-btn" data-toggle="modal" data-target="#edit-project-modal" data-projectid="<%= projects[i]._id %>"><i class="fas fa-edit"></i></span>
                                                        <span class="remove-project-btn" data-toggle="modal" data-target="#remove-confirmation-modal" data-projectid="<%= projects[i]._id %>"><i class="fas fa-trash"></i></span>
                                                    </div>
                                                <% } %>
                                            </div>
                                        <% } %>
                                    </div>


                                    <!-- REMAINING PROJECTS -->
                                    <div class="row n-mb" style="width: 100% !important;">

                                        <div class="col-10" id="row-projects-container">
                                            <% for(let i = 3; i < projects.length; i++){ %>
                                                <div id="<%= projects[i]._id %>" class="row mb-4 project-container add-shadow-box project-row">

                                                    <!-- INITIALS -->
                                                    <div class="initals-container pt-4 go-to-project" data-projectid="<%= projects[i]._id %>">
                                                        <div class="project-initials-container bg-initials-color" style="background-color: <%= projects[i]['initialsColors']%>;">
                                                            <span><%= projects[i]["initials"]%></span>
                                                        </div>
                                                    </div>

                                                    <div class="col-9 pt-2">

                                                        <div class="row">
                                                            <div class="col-12 go-to-project" data-projectid="<%= projects[i]._id%>">
                                                                <span class="project-name"> <%= projects[i]["title"]%></span>
                                                            </div>

                                                            <div class="col-12">
                                                                <span class="project-description description-color"> <%= projects[i]["description"]%> &nbsp;</span>
                                                            </div>

                                                            <div class="col-12">
                                                                <span class="project-work-done description-color"> <i class="fas fa-clipboard-list"></i> 10/20 Work items completed</span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <% if (projects[i]["author"].toString() == currentUser["_id"].toString()) { %>
                                                        <div class="col-2">
                                                            <div class="pr-4 project-icons project-icons-row" style="text-align: right;">
                                                                <span class="edit-project-btn" data-toggle="modal" data-target="#edit-project-modal" data-projectid="<%= projects[i]._id %>"><i class="fas fa-edit"></i></span>
                                                                <span class="remove-project-btn" data-toggle="modal" data-target="#remove-confirmation-modal" data-projectid="<%= projects[i]._id %>"><i class="fas fa-trash"></i></span>
                                                            </div>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            <% } %>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tabs-work-items">
                                <p> 
                                    Food truck fixie locavore, accusamus mcsweeney's marfa nulla single-origin coffee
                                    squid. 
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('modals/create-project'); %>
<%- include('modals/edit-project'); %>


<%- include('modals/delete-confirmation'); %>



<%- include('modals/footer'); %>
