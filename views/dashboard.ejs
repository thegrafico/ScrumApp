
<!--  Header and Styles -->
<%- include('modals/header'); %>

    <%- include('modals/topNavbar'); %>

    <div class="box-main-text">

        <div class="jumbotron">
            <h1 class="display-3">Scrum Board - Projects
                <i class="fas fa-space-shuttle"></i>
            </h1>
            <p class="lead"><span id="quote-span"></span></p>
            <hr class="my-4">
            <p class="lead">
                <button class="btn btn-success btn-lg" role="button" data-toggle="modal"
                    data-target="#createProjectModal">Create New Project
                </button>
            </p>
        </div>
    </div>

    <!-- LOADING MODAL -->
    <%- include('modals/createProject'); %>

    <div id="box-show-projects" class="container-fluid">

        <% for(let project of projects){ %>
            <div class="row">
                <% for(let i = 0; i < project.length; i++){ %>

                        <div id="<%= project[i]._id %>" class="col-3 card text-white bg-dark mb-6 card-project">
                            <a href="http://localhost:3000/<%= project_rediret %>/<%= project[i]._id %>" style="color:inherit; text-decoration: inherit;display: block;">
                                <div class="card-header">
                                    <span class='card-title'> <%= project[i].status %> </span> - <span class='card-date'> <%= project[i].createdAt %> </span>
                                </div>

                                <div class="card-body">
                                    <h4 class="card-title"><%= project[i].title %></h4>
                                    <p class="card-text"><%= project[i].description %></p>
                                </div>
                            </a>
                        </div>
                <% } %>
            </div>
        <% } %>


    </div>

    <div class="container-fluid">

    </div>

   <!-- Footer and scripts -->
   <%- include('modals/footer'); %>
