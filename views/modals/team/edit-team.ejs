<!-- MODAL TO CREATE USER -->
<div class="modal fade edit-team-modal" id="edit-team" tabindex="-1" role="dialog" aria-labelledby="edit-team"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createUserTitle" style="width: 60%;">
                        Edit Team <i class="fas fa-user-friends formatIcon"></i> </h5> &nbsp; &nbsp;
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <fieldset>

                        <div class="form-group">
                            <label for="userEmail">Team Name:</label>
                            <input type="text" class="form-control" name="teamName" id="team-name-input" aria-describedby="nameHelp" placeholder="Team name">
                        </div>
                    </fieldset>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="edit-team-btn-submit" class="btn btn-success">Submit</button>
                </div>
        </div>

    </div>
</div>