<!-- Modal -->
<div class="modal fade" id="make-project-favorite-modal" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Add to favorites <i class="fas fa-star-half-alt start-icon-add-favorite"></i>
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span> 
                </button>
                </div>

                <div class="modal-body">

                    <fieldset>
                        <div class="form-group">
                            <p>
                                Are you sure you want to add <span class="favorite-project-name"></span> to your favorites projects?
                            </p>
                        </div>
                    </fieldset>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="add-project-to-favorite-submit-btn" class="btn btn-success">Add</button>
                </div>

            <!-- To Store the project id to be added to favorite -->
            <input type="hidden" name="favoriteProjectId" class="favorite-project-id" id="favorite-project-id-add" value="0">
        </div>
    </div>
</div>