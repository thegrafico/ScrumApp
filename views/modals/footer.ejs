<!-- ========= MODALS =========  -->

<!-- User Modals -->
<% if (addUserModal) { %>
    <%- include('user/add-user-project'); %>
    <%- include('user/remove-user-project'); %>
    <!-- Modal for creating work item -->
    // TODO: Fix this place
    <%- include('./createWorkItem'); %>
    <%- include('./show-work-item-modal'); %>
<% } %>

<!-- team Modals -->
<% if (assignedUsers && projectTeams) { %>
    <%- include('team/create-team'); %>
    <%- include('team/delete-team'); %>
<% } %>

<!-- Sprints -->
<% if (sprints) { %>
    <%- include('sprints/create-sprint'); %>
    <%- include('sprints/remove-sprint'); %>
    <%- include('sprints/update-sprint'); %>
<% } %>


<input type="hidden" id="current-page" name="currentPage" value="<%=currentPage%>">
<input type="hidden" id="sprint-time-period" name="sprintTimePeriod" value="<%=sprintDefaultTimePeriod%>">
<input type="hidden" id="current-user-id" name="userId" value="<%=currentUser['_id']%>">


<!-- ==========================  -->

<!-- Dependecies -->
<script src="/javascripts/dependecies/jquery3.5.2.js"></script>
<script src="/javascripts/dependecies/validator.min.js"></script>
<script src="/javascripts/dependecies/lodash.js"></script>
<script src="/javascripts/work-item-constants.js"></script>
<script src="/javascripts/dependecies/notify.min.js"></script>
<script src="/javascripts/helpers.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<!-- DATE PICKER -->
<script type="text/javascript" src="/javascripts/dependecies/date-picker/moment.min.js"></script>
<script type="text/javascript" src="/javascripts/dependecies/date-picker/daterangepicker.js"></script>
<!-- END -->

<!-- Add defaults for notify -->
<script>
    $.notify.defaults({ "autoHideDelay": 4000, "position":"top center"});

    // to show custon message
    $.notify.addStyle('custom', {
        html: 
        `<div>
            <div class="notifyjs-wrapper notifyjs-hidable">
                <div class="notifyjs-container" style="">
                    <div class="notifyjs-bootstrap-base notifyjs-bootstrap-success">
                        <span class="text" data-notify-text="text"></span>
                    </div>
                </div>
            </div>
        </div>`
    });
</script>


<!-- Adding scritps -->
<% if (scriptsPath){ %>
    <% for (let path of scriptsPath){ %>
        <script src="<%=path%>"> </script>
    <%}%>
<% } %>
</body>
</html>
