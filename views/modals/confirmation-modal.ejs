<div class="modal fade" id="confirmation-modal" tabindex="-1" role="dialog" aria-labelledby="Confirmation Modal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmation-modal-title">Confirmation</h5>
                <button type="button" class="close" onclick="$('#confirmation-modal').modal('hide');" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               <p id="confirmation-modal-message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="confirmation-btn-cancel"  class="btn btn-secondary" onclick="$('#confirmation-modal').modal('hide');">No</button>
                <button type="button" id="confirmation-btn-confirm" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>