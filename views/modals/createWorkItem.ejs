<!-- Large modal -->
<div class="modal fade createNewItemModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">

        <div class="modal-content">
            <form method="POST" action="" id="createProjectForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">New work item </h5> &nbsp; &nbsp; <i class="fas fa-bolt taskIcon"></i>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <fieldset>


                        <div class="row">

                            <div class="col IdAndTitle">
                                <input type="text" name="title" id="new-item-title" class="bx-shadow"
                                    placeholder="Enter title">
                                <span id="title-span-msg"><i class="fas fa-exclamation-circle"></i> Title cannot be empty</span>
                            </div>
                        </div>

                        <div class="row no-m-bt">
                            <div class="col-3">

                                <div class="form-group d-flex">
                                    <i class="fas fa-user userLogo"></i>
                                    <select class="custom-select my-custon-select" name="userAssigned" id="assignedUser">
                                        <option value="1"> Unassigned </option>
                                        <option value="4"> Lana </option>
                                        <option value="5"> Zeus </option>
                                    </select>
                                </div>

                            </div>

                            <div class="col-1">
                                <span>
                                    <i class="fas fa-comments"></i> 0
                                </span>
                            </div>

                            <div class="col tagsContainer">
                                <button type="button" id="addTagBtn" class="btn btn-primary">Add tag</button>
                                
                            </div>
                        </div>

                        <div class="row create-work-item-bg">
                            <div class="col-12 mt-4">
                                <div class="row">
                                    <div class="col-2 d-flex">
                                        <span class="aling-vertically align-self-center"> State: </span>
                                        <select class="custom-select my-custon-select " name="statusAssigned"
                                            id="statusAssigned">
                                            <option value="0" selected>New</option>
                                            <option value="1">Active</option>
                                            <option value="2">Resolved</option>
                                            <option value="3">Block</option>
                                            <option value="4">Closed</option>
                                        </select>
                                    </div>

                                    <div class="col-4 d-flex">
                                        <span class="aling-vertically align-self-center"> Team: </span>
                                        <select class="custom-select my-custon-select " name="statusAssigned"
                                            id="statusAssigned">
                                            <option value="0" selected>Team Awesome</option>
                                            <option value="1">Team Batman</option>
                                            <option value="2">Resolved</option>
                                            <option value="3">Block</option>
                                            <option value="4">Closed</option>
                                        </select>
                                    </div>


                                </div>

                                <div class="row">
                                    <div class="col-2 d-flex">
                                        <span class="aling-vertically align-self-center"> Type: </span>

                                        <ul class="nav nav-pills flex-column" id="customSelect">
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" 
                                                    role="button" aria-haspopup="true"  id="currentType" aria-expanded="false"> <i class="fas fa-book-open cl-blue"></i> &nbsp; Story </a>
                                                <div class="dropdown-menu" >
                                                    <a class="dropdown-item btnType" href="#"> <i class="fas fa-clipboard-check"></i> &nbsp; Task </a>
                                                    <a class="dropdown-item btnType" href="#">  <i class="fas fa-bug cl-danger"></i> &nbsp; Bug </a>
                                                    <a class="dropdown-item btnType" href="#">  <i class="fas fa-bolt taskIcon"></i> &nbsp; Epic </a>
                                                </div>
                                            </li>
                                        </ul>

                                        <!-- <select class="custom-select my-custon-select " name="statusAssigned" id="statusAssigned">        
                                            <option value="0" selected>Story</option>
                                            <option value="1">Taks</option>
                                            <option value="2">Bug</option>
                                            <option value="3">Epic</option>
                                        </select> -->
                                    </div>

                                    <div class="col-4 d-flex">
                                        <span class="aling-vertically align-self-center"> Iteration: </span>
                                        <select class="custom-select my-custon-select " name="statusAssigned"
                                            id="statusAssigned">
                                            <option value="0" selected>Sprint 1</option>
                                            <option value="1">Sprint 2</option>
                                            <option value="2">Resolved</option>
                                            <option value="3">Block</option>
                                            <option value="4">Closed</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="row desc-planing-development">

                            <div class="col">
                                <h5 class="pd-p">Description</h5>
                                <textarea name="" id="description-textarea" rows="10" placeholder="Enter Description."
                                    class="bx-shadow"></textarea>
                            </div>

                            <div class="col-3 planing-work-item">
                                <h5 class="pd-p">Planing</h5>

                                <p>Story Points</p>
                                <input type="text" name="storyPoints" class="input-style"
                                    placeholder="Enter points: e.x 5">

                                <p>Priority</p>
                                <input type="text" name="priorityPoints" class="input-style"
                                    placeholder="Enter Priority: e.x 3">

                            </div>

                            <div class="col-3 addLink">
                                <h5 class="pd-p">Related work</h5>
                                <p> <i class="fas fa-plus "></i> Add link</p>
                            </div>

                        </div>

                        <div class="row desc-planing-development">
                            <div class="col-6">
                                <h5 class="pd-p">Discussion</h5>
                                <textarea name="" id="comment-textarea" rows="4"
                                    placeholder="Add a comment for this story." class="bx-shadow"></textarea>

                            </div>
                        </div>

                    </fieldset>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="createProjectBtn" type="submit" value="submit" class="btn btn-primary">Create
                        Project</button>
                </div>
            </form>
        </div>

    </div>