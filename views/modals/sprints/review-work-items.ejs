<!-- Modal -->
<div class="modal fade" id="review-work-items" tabindex="-1" role="dialog" aria-labelledby="Points Information" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"><span id="title-review-work-items">Work Items</span></h5>
            <button type="button" class="close close-review-modal" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" >&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="p-4" id="table-container">
                <table class="table table-hover" id="workItemTable">
                    <thead>
                        <tr class="tableHeader">
                            <th class="orderColumn">Order</th>
                            <th scope="col" class="tableColumnID">ID</th>
                            <th class="d-none" scope="col">Type</th>
                            <th class="col-title"  scope="col">Title</th>
                            <th scope="col">Assigned</th>
                            <th scope="col">State</th>
                            <th scope="col">Comments</th>
                            <th scope="col">Points</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < workItems.length; ++i) {%>
                            <tr class="rowValues <%=workItems[i]['status']%>" id="<%=workItems[i]['_id']%>">
                                
                                <!-- ORDER -->
                                <td class="orderColumn"><%=i+1%></td>
                                
                                <!-- id -->
                                <td class="tableColumnID"> <%=workItems[i]["itemId"]%></td>
                                
                                <!-- TYPE  - HIDEN -->
                                <td class="d-none" > <i class="fas <%=workItemType[workItems[i]['type']].icon%>"></i> <%=workItems[i]["type"]%></td>
                                
                                <!-- TITLE -->
                                <td class="openStory"> 
                                    <a href="/dashboard/<%=projectId%>/workitems/<%=workItems[i]['_id']%>"  target="_blank" rel="<%=workItems[i]['_id']%>">  
                                        <span class="table-icon"> <i class="fas <%=workItemType[workItems[i]['type']].icon%>"></i> </span>  <%=workItems[i]["title"]%> 
                                    </a> 
                                </td>

                                <!-- USER -->
                                <td> <i class="fas fa-user-astronaut"></i> <%=workItems[i]["assignedUser"]["name"]%></td>
                                
                                <!-- STATUS -->
                                <td><i class="fa fa-circle <%=workItems[i]['status']%>Color" aria-hidden="true"></i> <%=workItems[i]["status"]%></td>

                                
                                <!-- COMMENTS -->
                                <td class="table-comments-column"><span>  <i class="fas fa-comments"></i>  <%=workItems[i]["comments"].length%></span> </td>

                                <!-- POINTS -->
                                <td class="storyPointsRow <%=workItems[i]['status']%>"><%=workItems[i]["storyPoints"]%></td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary close-review-modal" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
</div>
    