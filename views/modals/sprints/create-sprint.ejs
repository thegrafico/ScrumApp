<!-- MODAL TO CREATE USER -->
<div class="modal fade" id="create-user" tabindex="-1" role="dialog" aria-labelledby="create-user-title"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createUserTitle" style="width: 60%;">
                        Add New Member <i class="fas fa-user-plus addUserIcon"></i> </h5> &nbsp; &nbsp;
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <fieldset>
                        <div class="form-group">
                            <label for="userEmail">User:</label>
                            <select 
                                class="custom-select my-custon-select input-border"
                                name="projectUsers" 
                                id="project-user-select" 
                                aria-label="project-user">
                                <option value="0" selected disabled>Select an user</option>
                                
                                <% for (let i = 0; i < projectUsers.length; i++) { %>

                                    <% if (userIds.includes(projectUsers[i].id.toString())){ %>
                                        <option value="<%=projectUsers[i]['id']%>" disabled><%=projectUsers[i]['name']%></option>

                                    <% }else{ %>    
                                        <option value="<%=projectUsers[i]['id']%>"><%=projectUsers[i]['name']%></option>
                                    <% } %>

                                <% } %>
                            </select>
                        </div>
                        <span class="text-danger" id="createUserErrorMessage"></span>
                    </fieldset>

                </div>

                <div class="modal-footer">
                    <button type="btnCancelUser" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="btnAddUserToTeam" class="btn btn-success">Add User</button>
                </div>
        </div>

    </div>
</div>