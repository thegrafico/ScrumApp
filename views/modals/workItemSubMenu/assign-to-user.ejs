<div class="modal fade" id="assign-to-user-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Assign to user</h5> <i class="ml-2 fas fa-user-astronaut"></i>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="assignToUser"> Select User: </label>
                    <select class="custom-select" name="assignToUser" id="assign-to-user-select">
                        <option value="0" selected>Select an user...</option>

                        <% for (let user of assignedUsers) { %>

                            <% if (user['id'] == "0") {continue;} %>

                            <option value="<%=user['id']%>"><%=user['name']%></option>
                        <% } %>
                    </select>                        
                </div>
                <span class="text-info small" id="span-msg-assign-to-user"></span>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="assign_to_user_submit_btn">Apply</button>
            </div>
        </div>
    </div>
</div>