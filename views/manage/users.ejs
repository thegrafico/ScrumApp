<%- include('../templates/header'); %>

<body>

    <%- include('../templates/top-navbar'); %>

    <div class="wrapper d-flex align-items-stretch">

        <%- include('../templates/left-sidebar'); %>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">

            <%- include('../templates/title-options-menu'); %>

            <div class="container-fluid statistics-boxs">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark pb-2">
                
                    <div class="collapse navbar-collapse" id="navbarColor02">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">
                                    <span class="sr-only">(current)</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" 
                                    href="#" id="addUserBtn" 
                                    role="button" 
                                    data-toggle="modal" 
                                    data-target=".add-user-project-modal">
                                    <i class="fas fa-plus addIcon"></i> Invite User
                                </a>
                            </li>

                            <li class="nav-item trashIconWrapper">
                                &nbsp;
                                <button id="trashBtnManageUser" class="trash-btn" disabled data-toggle="modal" data-target="#remove-confirmation-modal"> 
                                    <i class="far fa-trash-alt grayColor"></i> 
                                </button>
                            </li>

                        </ul>
                        <div class="form-inline my-2 my-lg-0">
                            <input id="filter-manage-team" class="form-control mr-sm-2" type="text" placeholder="Email or Name">
                            
                            <button id="filterBtn" class="btn btn-secondary my-2 my-sm-0 filterBtn">
                                <i class="fas fa-filter"></i>
                            </button>
                        </div>
                    </div>
                    <!-- INCLUDE FILTER DIV HERE -->
                </nav>


            </div>

            <div class="p-4 hide-functional-scroll" id="table-container">
                <table class="table table-hover" id="manage-table">
                    <thead>
                        <tr class="tableHeader">
                            <th class="tableCheckBoxRowHeader">Check</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Privilege</th>
                            <th class="column-edit-team" scope="col">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 1; i < projectUsers.length; ++i) {%>
                            <tr class="rowValues" id="<%=projectUsers[i]['id']%>">
                                
                                <td class="tableCheckBoxRowElement"> 
                                    <label class="invisible labelcheckbox"> 
                                        <input type="checkbox" aria-label="table-row-checkbox" name="checkboxWorkItem[]" value="<%=projectUsers[i]['id']%>" class="checkboxRowElement" />
                                    </label> 
                                </td>

                                <td>
                                    <%=projectUsers[i]["name"]%>
                                </td>

                                <td>
                                    <%=projectUsers[i]["email"]%>
                                </td>

                                <td>
                                    <%=projectUsers[i]["privilege"]%>
                                </td>

                                <td class="column-edit-team">
                                    <button 
                                        class="btn btn-warning edit-user-team-btn btn-update-user-modal-open"  
                                        data-toggle="modal" 
                                        id="<%=projectUsers[i]['id']%>"
                                        data-target=".update-user-modal">
                                        <i class="fas fa-user-edit"></i>
                                    </button>
                                </td>

                                <!-- User -->
                                <td class="d-none values"> 
                                    <span class="name"><%=projectUsers[i]["name"]%></span>
                                    <span class="email"><%=projectUsers[i]["email"]%></span>
                                    <span class="privilege"><%=projectUsers[i]["privilege"]%></span>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" name="updateUserId" id="updateUserId" value="0">
    </div>

    <%- include('../modals/user/update-user'); %>

<%- include('../templates/footer'); %>